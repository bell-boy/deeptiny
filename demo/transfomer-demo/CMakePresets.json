{
  "version": 6,
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "generator": "Unix Makefiles",
      "binaryDir": "${sourceDir}/build",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "dev",
      "displayName": "Dev",
      "inherits": "base"
    },
    {
      "name": "release",
      "displayName": "Release",
      "inherits": "base",
      "binaryDir": "${sourceDir}/build/release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "OFF",
        "CMAKE_CXX_FLAGS_RELEASE": "-O3 -DNDEBUG",
        "TRANSFOMER_DEMO_BUILD_TESTS": "OFF"
      }
    },
    {
      "name": "bench-pg",
      "displayName": "Benchmark (pg)",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo",
        "TRANSFOMER_DEMO_ENABLE_TOKENIZERS_CPP": "OFF",
        "TRANSFOMER_DEMO_ENABLE_PG": "ON"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "dev",
      "configurePreset": "dev",
      "targets": ["transfomer_demo"]
    },
    {
      "name": "release",
      "configurePreset": "release",
      "targets": ["transfomer_demo"]
    },
    {
      "name": "bench-pg",
      "configurePreset": "bench-pg",
      "targets": ["transfomer_generation_benchmark"]
    }
  ]
}
